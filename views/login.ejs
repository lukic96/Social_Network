  <body class="flexSystem text-center">

    <main class="form-signin w-25">
      <img class="mb-4" src="images/myLogo.png" alt="" width="100">
      <h1 class="h2 mb-4 fw-normal" id="bla">Login</h1>
      <form action="/login" method="POST">
        <div class="form-floating">
          <input type="text" class="form-control" name="username" id="username" placeholder="John Doe" required>
          <label>Username</label>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
          <label>Password</label>
        </div>
        <button class="w-45 btn btn-lg btn-dark" type="submit" id="login">Login</button>
        <p class="mt-5 mb-3 text-muted">Nikola Lukic &copy; 2021</p>
      </form>
      <a class="btn btn-lg btn-dark" href="/" role="button" id="back">‚Üê</a>
    </main>

    

